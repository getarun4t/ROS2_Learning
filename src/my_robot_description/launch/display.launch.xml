<launch>
    <let name="urdf_path" value="$(find-pkg-share my_robot_description)/urdf/my_robot.urdf"></let>
    <let name="rviz_config_path" value="$(find-pkg-share my_robot_description)/rviz/urdf_config.rviz"></let>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
        value="$(command 'xacro $(var urdf_path)')"></param>
    </node>

    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"></node>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)"></node>
</launch>